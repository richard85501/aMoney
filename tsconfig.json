{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["src/**/*.ts", "declarations.d.ts"]
  }